
@{
    ViewData["Title"] = "Index";
}
@section Styles
{

    <link href="~/vendor/centit.easyui/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/vendor/centit.easyui/themes/icon.css" rel="stylesheet" />
}

@section Scrips{
    <script src="~/app/Shared/app.js"></script>
    <script src="~/vendor/centit.easyui/jquery.easyui.min.js"></script>
    <script src="~/vendor/bootbox/bootbox.js"></script>
    <script src="~/app/controllers/product-category/index.js" asp-append-version="true"></script>
    <script>
        var productCategory = new productCategoryController();
        productCategory.initialize();
    </script>
}
<div class="page-title">
    <div class="title_left">
        <h3>Product categories<small>List Product categories</small></h3>
    </div>

    <div class="title_right">
        <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right top_search">
            <button class="btn btn-success" type="button" id="btnCreate">Create</button>
        </div>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <ul id="treeProductCategory"></ul>
                <div id="contextMenu" class="easyui-menu" style="width: 120px">
                    <div id="btnEdit" data-options="iconCls:'icon-edit'">Edit</div>
                    <div id="btnDelete" data-options="iconCls:'icon-remove'">Delete</div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_AddEditModal.cshtml");
